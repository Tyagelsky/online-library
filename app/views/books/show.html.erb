<h2 align="center">Name: <%= @book.name %><h2>
  <div class="well col-xs-8 col-xs-offset-2">
    <ul class="listing">
      <div class="row center">
        <div class=" col-md-4 col-md-offset-4">
          <li><%= image_tag @book.avatar.url(:medium)%></li>
          </div>
      </div>
    </ul>
    <h4 class="center"><strong> Description: </strong></h4>
    <hr>
    <p><%= @book.description%></p>
    <div class="book-actions">
        <%= link_to "Edit book", edit_book_path(@book), class: "btn btn-xs btn-success" %>
        <%= link_to "Delete book", book_path(@book), method: :delete,
                                      data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger" %>
        <%= link_to "View all books", books_path, class: "btn btn-xs btn-primary" %>

    </div>
  </div>
